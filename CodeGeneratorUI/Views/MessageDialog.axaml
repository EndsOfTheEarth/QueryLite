<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300"
        x:Class="QueryLite.CodeGeneratorUI.MessageDialog"
        Icon="/Assets/Icon.ico"
        Title="MessageDialog">

  <Grid ColumnDefinitions="*" RowDefinitions="*,50">
    <TextBox Name="txtMessage" Grid.Row="0" Grid.Column="0" IsReadOnly="true" ScrollViewer.HorizontalScrollBarVisibility="Auto" Margin="2"></TextBox>
    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Name="btnOk" Width="100" HorizontalContentAlignment="Center" Margin="0,0,5,0" HotKey="Alt+O" IsCancel="True">_Ok</Button>
    </StackPanel>
  </Grid>
</Window>