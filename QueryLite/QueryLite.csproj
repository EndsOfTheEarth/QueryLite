<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net7.0;net8.0</TargetFrameworks>
    <Nullable>Enable</Nullable>
    <AssemblyVersion>0.9.5</AssemblyVersion>
    <FileVersion>0.9.5</FileVersion>
    <Version>0.9.5</Version>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <PackageId>QueryLite.net</PackageId>
    <Title>Query Lite</Title>
    <Authors>EndsOfTheEarth</Authors>
    <Company />
    <Product />
    <Description>A typesafe database query library</Description>
    <Copyright>EndOfTheEarth</Copyright>
    <PackageProjectUrl>https://github.com/EndsOfTheEarth/QueryLite</PackageProjectUrl>
    <RepositoryUrl>https://github.com/EndsOfTheEarth/QueryLite.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Sql;Typesafe;SqlServer;PostgreSql;</PackageTags>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageReadmeFile>NugetReadme.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\.editorconfig" Link=".editorconfig" />
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\NugetReadme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Npgsql" Version="7.0.6" />
    <PackageReference Include="QueryLite.Utility" Version="0.1.1" />
    <PackageReference Include="System.Data.SqlClient" Version="4.8.5" />
  </ItemGroup>
</Project>